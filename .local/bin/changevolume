#!/bin/bash

function send_notification() {
	volume=$(pamixer --get-volume)
	dunstify -a "changevolume" -u low -r "9993" -h int:value:"$volume" -i "audio-volume-high-symbolic" "Volume: ${volume}%" -t 3000
}

case $1 in
up)
	# Set the volume on (if it was muted)
	pamixer -u
	pamixer -i 3 --allow-boost
	send_notification $1
	;;
down)
	pamixer -u
	pamixer -d 3 --allow-boost
	send_notification $1
	;;
mute)
	pamixer -t
	if $(pamixer --get-mute); then
		dunstify -i audio-volume-muted-symbolic -a "changevolume" -t 3000 -r 9993 -u low "Muted"
	else
		send_notification up
	fi
	;;
esac
