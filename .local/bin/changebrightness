#!/bin/bash

function send_notification() {
	brightness=$(brightnessctl -m | awk -F, '{print substr($4, 0, length($4)-1)}')
	dunstify -a "changebrightness" -u low -r 9991 -h int:value:"$brightness" -i "display-brightness-symbolic" "Brightness: $brightness%" -t 3000
}

case $1 in
up)
    brightnessctl s 17+
	send_notification
	;;
down)
    brightnessctl s 17-
	send_notification
	;;
esac
